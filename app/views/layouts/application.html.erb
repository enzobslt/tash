<!DOCTYPE html>
<html>
  <head>
    <title>TASH</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <%= yield %>
  </body>
  <script>
        const menuHamburger = document.querySelector(".menu-hamburger")
        const navLinks = document.querySelector(".nav-links")

        menuHamburger.addEventListener('click',()=>{
        navLinks.classList.toggle('mobile-menu')
        })

        function changerImage() {
          var imgElement = document.querySelector('.menu-hamburger');

          if (imgElement.src === 'https://res.cloudinary.com/duoy5yel9/image/upload/v1683806071/hamburger-icone.png') {
            imgElement.src = 'https://res.cloudinary.com/duoy5yel9/image/upload/v1683806071/croix-icone.png';
          } else {
            imgElement.src = 'https://res.cloudinary.com/duoy5yel9/image/upload/v1683806071/hamburger-icone.png';
          }
        }

</script>
</html>
